{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"declarationDir": "build-types",
		"paths": {
			"@popup-maker/components": [ "../components/src" ],
			"@popup-maker/core-data": [ "../core-data/src" ],
			"@popup-maker/fields": [ "../fields/src" ],
			"@popup-maker/i18n": [ "../i18n/src" ],
			"@popup-maker/registry": [ "../registry/src" ],
			"@popup-maker/types": [ "../types/src" ],
			"@popup-maker/use-query-params": [ "../use-query-params/src" ],
			"@popup-maker/utils": [ "../utils/src" ]
		}
	},
	"include": [ "./src/**/*" ],
	"references": [
		{
			"path": "../components"
		},
		{
			"path": "../core-data"
		},
		{
			"path": "../i18n"
		},
		{
			"path": "../fields"
		},
		{
			"path": "../registry"
		},
		{
			"path": "../use-query-params"
		},
		{
			"path": "../utils"
		},
		{
			"path": "../types"
		}
	]
}
